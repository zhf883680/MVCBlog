@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/Scripts/getParm.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="height: 200px; background-image: url(http://area.sinaapp.com/bingImg)">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-2">
                <ul class="nav nav-pills nav-stacked">
                    <li class="nav-header">
                        前端
                    </li>
                    <li>
                        <a href="/admin?type=1" data-type="1">js</a>
                    </li>
                    <li>
                        <a href="/admin?type=2" data-type="2">html</a>
                    </li>
                    <li>
                        <a href="/admin?type=3" data-type="3">github</a>
                    </li>
                    <li>
                        <a href="/admin?type=4" data-type="4">Node.Js</a>
                    </li>
                    <li class="nav-header">
                        后台
                    </li>
                    <li>
                        <a href="/admin?type=5" data-type="5">c#</a>
                    </li>
                    <li>
                        <a href="/admin?type=6" data-type="6">php</a>
                    </li>
                    <li class="nav-header">
                        其他
                    </li>
                    <li>
                        <a href="/admin?type=1">照片</a>
                    </li>
                    <li>
                        <a href="/admin?type=7" data-type="7">生活</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-10">@RenderBody()</div>
        </div>
    </div>
    <script>
        $(function () {
            var type = $.getUrlParam("type");
            for (var i = 0; i < $("li").length; i++) {
                if (type == $("li").eq(i).children("a").attr("data-type")) {
                    $("li").eq(i).addClass("active");
                }
            }
        })
    </script>
</body>
</html>

